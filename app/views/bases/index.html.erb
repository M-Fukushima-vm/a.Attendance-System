<% provide(:title, 'All Bases') %>
<h1>
    拠点一覧
</h1>

<!--拠点一覧-->
<div class="col-md-10 col-md-offset-1">
  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr></tr>
      <tr>
        <th class="center">　</th>
        <th class="center">　</th>
        <th class="center">拠点番号</th>
        <th class="center">拠点名</th>
        <th class="center">拠点種類</th>
      </tr>
    </thead>

    <% @bases.each do |base| %>
      <tr>
        <td>
          <!--<div class="panel-group">-->
            <!--<div class="panel panel-default">-->
              <!--<div class="panel-heading">-->
                <!--<p class="panel-title">-->
                  <a data-toggle="collapse" href="#collapse<%= base.id %>" class="btn btn-primary">
                    編集
                  </a>
                <!--</p>-->
              <!--</div>-->
              <div id="collapse<%= base.id %>" class="panel-collapse collapse">
                <div class="panel-body">
                  <div class="row">
                    <div class="col-md-6 col-md-offset-1">
                      <%= render 'form_index', { base: base } %>
                    </div>
                  </div>
                </div>
              </div>
            <!--</div>-->
          <!--</div>-->
        </td>
        <td class="center">
          <%= link_to "削除", base, method: :delete,
          data: { confirm: "「 #{base.name} 」を削除してよろしいですか？" },
          class: "btn btn-primary" %>
        </td>
        <td class="center"><%= base.id %></td>
        <td class="center"><%= base.name %></td>
        <td class="center"><%= base.assortment %></td>
      </tr>
    <% end %>
  </table>
  
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p class="panel-title">
          <a data-toggle="collapse" href="#collapse" class="btn btn-primary">
            拠点情報追加
          </a>
        </p>
      </div>
      <div id="collapse" class="panel-collapse collapse">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-6 col-md-offset-1">
              <%= render 'form' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>