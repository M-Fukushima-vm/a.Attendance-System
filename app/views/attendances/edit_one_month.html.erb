<!--%= form_with(model: @user, url: edit_approval_user_path(current_user.id), local: true, method: :patch) do |f| %>-->
<%= form_with(model: @user, url: edit_approval_user_path(current_user.id), method: :patch) do |f| %>
  <div>
    <!--<h1>勤怠編集画面</h1>-->
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出社</th>
          <th>退社</th>
          <th>翌日</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>指示者確認㊞</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |day| %>
          <!--%= f.fields_for "attendances[]", day do |attendance| %>-->
          <%= f.fields_for "attendances[]", day do |attendance| %>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
              <td><%= $days_of_the_week[day.worked_on.wday] %></td>
              <% if (Date.current < day.worked_on) %>
                <td>
                  <%= attendance.datetime_select :t_started_at, {selected: attendance.object.started_at, include_blank: true, discard_year: true, discard_month: true, discard_day: true, disabled: true}, {class: "form-control time-select"} %>
                </td>
                <td>
                  <%= attendance.datetime_select :t_finished_at, {selected: attendance.object.finished_at, include_blank: true, discard_year: true, discard_month: true, discard_day: true, disabled: true}, {class: "form-control time-select"} %>
                </td>
              <% else %>
                <td>
                  <%= attendance.datetime_select :t_started_at, {selected: attendance.object.started_at, include_blank: true, discard_year: true, discard_month: true, discard_day: true}, {class: "form-control time-select"} %>
                </td>
                <td>
                  <%= attendance.datetime_select :t_finished_at, {selected: attendance.object.finished_at, include_blank: true, discard_year: true, discard_month: true, discard_day: true}, {class: "form-control time-select"} %>
                </td>
              <% end %>
              <td>
                <%= attendance.check_box :next_day, {}, "true", "false" %>
              </td>
              <td>
                <% if day.started_at.present? && day.finished_at.present? %>
                  <%= working_times(day.started_at, day.finished_at) %>
                <% end %>
              </td>
              <td><%= attendance.text_field :note, class: "form-control" %></td>
              <td>
                <%= attendance.collection_select :e_approval_superior, @superior_user_array, :id, :name, :prompt => "申請上長を選択" %>
              </td>
              <% if day.e_approval_superior.blank? %>
                <%= attendance.hidden_field :edit_approval, value: "申請中" %>
              <% end %>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="center">
    <%= link_to "　　　キャンセル　　　", user_path(date: @first_day), class: "btn btn-default" %>
    <%= f.submit "　　　編集を保存する　　　", class: "btn btn-primary" %>
  </div>
<% end %>