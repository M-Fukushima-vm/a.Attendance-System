<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "⇦", user_path(date: @first_day.prev_month), class: "btn btn-primary btn-sm" %>
        　<%= l(@first_day, format: :middle) %>  勤怠管理表　
        <%= link_to "⇨", user_path(date: @first_day.next_month), class: "btn btn-primary btn-sm" %>
      </td>
      <td>
        <!--指定勤務時間：%= format_basic_info(@user.work_time) %><br>-->
        指定勤務開始時間：<%= format_basic_info(@user.work_time) %><br>
        指定勤務終了時間：<%= format_basic_info(@user.work_time) %>
      </td>
      <td colspan="3">基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CSV出力", "#", class: "btn btn-primary" %><br>
  <%= link_to "勤怠修正ログ（承認済）", "#", class: "btn btn-primary" %>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3"><br><br>残業申請</th>
        <th rowspan="3"><br><br>日付</th>
        <th rowspan="3"><br><br>曜日</th>
        <td colspan="8">【実績】</td>
        <td colspan="5">所定外勤務</td>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認㊞</th>
      </tr>
      <tr>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <% 
          css_class = 
          case %w{日 月 火 水 木 金 土}[day.worked_on.wday]
          when '土'
            'text-primary'
          when '日'
            'text-danger'
          end
        %>
        <tr>
          <td><%= link_to "残業申請", "#", class: "btn btn-primary btn-sm" %></td>
          <!--日付　表示-->
          <td><%= l(day.worked_on, format: :short) %></td>
          <!--曜日　表示-->
          <td class="<%= css_class %>">
            <%= $days_of_the_week[day.worked_on.wday] %>
          </td>
          <!--出社：時のみの表示-->
          <td><%= l(day.started_at.floor_to(15.minutes), format: :hour) if day.started_at.present? %></td>
          <!--出社：分のみの表示-->
          <td><%= l(day.started_at.floor_to(15.minutes), format: :minute) if day.started_at.present? %></td>
          <!--出社ボタン表示用スペース-->
          <td>
            <% if Date.current == day.worked_on && day.started_at.nil? %>
              <%= link_to "　出社　", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-sm btn-attendance" %>
            <!--% if btn_text = attendance_state(day) %>-->
              <!--%= link_to "　#{btn_text}　", user_attendance_path(@user, day), method: :patch, class: "btn btn-gray btn-attendance" %>-->
            <% end %>
          </td>
          <!--退社：時のみの表示-->
          <td><%= l(day.finished_at.floor_to(15.minutes), format: :hour) if day.finished_at.present? %></td>
          <!--退社：分のみの表示-->
          <td><%= l(day.finished_at.floor_to(15.minutes), format: :minute) if day.finished_at.present? %></td>
          <!--退社ボタン表示用スペース-->
          <td>
            <% if Date.current == day.worked_on && day.started_at.present? && day.finished_at.nil? %>
              <%= link_to "　退社　", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-sm btn-attendance" %>
            <!--% if btn_text = attendance_state(day) %>-->
              <!--%= link_to "　#{btn_text}　", user_attendance_path(@user, day), method: :patch, class: "btn btn-gray btn-attendance" %>-->
            <% end %>
          </td>
          <!--在社時間　表示-->
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <!--備考　表示-->
          <td><%= day.note %></td>
          <!--終了予定時間：時のみの表示-->
          <td>"#"</td>
          <!--終了予定時間：分のみの表示-->
          <td>"#"</td>
          <!--時間外時間　表示-->
          <td>"#"</td>
          <!--業務処理内容　表示-->
          <td>"#"</td>
          <!--支持者確認㊞　表示-->
          <td>"#"</td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <!--<tr>-->
        <!--<td colspan="2">累計日数(当月)</td>-->
        <!--<td colspan="6">総合勤務時間　(指定勤務時間 × 出勤日数)</td>-->
        <!--<td colspan="1">累計在社時間</td>-->
        <!--<td rowspan="2"></td>-->
      <!--  <td></td>-->
      <!--  <td></td>-->
      <!--  <td></td>-->
      <!--</tr>-->
      <tr>
        <td><br><br><br></td>
        <!--総合勤務時間（指定勤務時間*出勤日数）　表示-->
        <td colspan="2"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="6"></td>
        <!--累計在社時間　表示-->
        <td colspan="1"><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="5"></td>
        <!--所属長承認　表示欄-->
        <td rowspan="3",>
          所属長承認 <%= "#" %><br>
          <!--選択欄-->
            <form class="form-inline dropdown-menu-right">
              <%= form_with model: User.new do |form| %>
                <div class="input-group">
                  <%= form.text_field :name, value: (params[:user][:name] if params[:user]), placeholder: "所属長選択", class: "form-control" %>
                </div>
              <% end %>
            </form><br>
          <%= link_to "申請", "#", method: :patch, class: "btn btn-primary btn-sm btn-block" %>
        </td>
      </tr>
    </tfoot>

  </table>
</div>